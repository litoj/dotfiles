[list]
all=yes
order=numeric

[viewer]
window=#000000
history=5
preload=2
antialiasing=box

[info]
show=no
info_timeout=0
status_timeout=1

[gallery]
antialiasing=none
window=#000000
background=#101010
border=#bb33aa
shadow=#00000000
size=500
fill=no
select=#bb33aa
cache=0

[keys.viewer]
Shift+Space=prev_file
BackSpace=prev_file
p=prev_file
n=next_file
Left=prev_file
Right=next_file
comma=prev_file
period=next_file
Shift+h=prev_file
Shift+l=next_file

Alt+ScrollDown=zoom -1
Alt+ScrollUp=zoom +1
Ctrl+ScrollDown=zoom -2
Ctrl+ScrollUp=zoom +2
ScrollLeft=step_left 1
ScrollDown=step_down 1
ScrollUp=step_up 1
ScrollRight=step_right 1
Shift+ScrollLeft=step_left 5
Shift+ScrollDown=step_down 5
Shift+ScrollUp=step_up 5
Shift+ScrollRight=step_right 5
Shift+k=zoom keep
Alt+a=zoom keep
i=zoom +10
Up=zoom +10
o=zoom -10
Down=zoom -10
a=zoom 100
f=zoom fill
Shift+f=zoom fit
MouseMiddle=zoom 100
1=zoom +100
2=zoom 200
5=zoom 50
4=zoom 400
Shift+a=zoom real
s=zoom fill
Shift+s=zoom fit
Alt+s=zoom optimal

h=step_left 5
j=step_down 5
k=step_up 5
l=step_right 5

r=rotate_right
Shift+r=rotate_left

# d=description g=gallery
d=info
u=antialiasing
g=mode
Tab=mode
F5=reload

b=exec ~/.config/sway/custombg '%'
Alt+Shift+s=exec adb push '%' /storage/emulated/0/Download/
Alt+f=exec dragon-drop -x -T '%'
Alt+e=exec nohup xterm ranger --selectfile='%' &>/dev/null
Ctrl+e=exec xdg-open -c ~/.config/ranger/edit.conf.sh '%'
Shift+e=exec mkdir -p /tmp/img_export/ && cp '%' /tmp/img_export/
Shift+b=exec cp '%' ~/Pictures/screen/
Delete=exec bash -c 'x="%" && mv "$x" "/tmp/my/trash/${x##*/}"'; skip_file

[keys.gallery]
# too fast -> scroll only horizontally
ScrollLeft=none
ScrollRight=none
ScrollUp=step_left
Shift+dScrollUp=step_up
ScrollDown=step_right
Shift+ScrollDown=step_down
h=step_left
j=step_down
k=step_up
l=step_right
Delete=exec bash -c 'x="%" && mv "$x" "/tmp/my/trash/${x##*/}"'; skip_file

Alt+f=exec dragon-drop -x -T '%'
Alt+e=exec xterm ranger --selectfile='%'
Ctrl+e=exec gimp '%'
Shift+e=exec mkdir -p /tmp/img_export/ && cp '%' /tmp/img_export/

Tab=mode
Space=mode
g=mode

